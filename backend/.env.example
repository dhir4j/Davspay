# ========================================
# Davspay Backend - Environment Variables
# ========================================
# Copy this file to .env and update with your actual values

# Database Configuration (PythonAnywhere PostgreSQL)
# Get these from: https://www.pythonanywhere.com/user/YOUR_USERNAME/databases/
DB_HOST=dhir4j-XXXX.postgres.pythonanywhere-services.com
DB_NAME=davspay_db
DB_USER=dhir4j
DB_PASSWORD=your_secure_password_here
DB_PORT=1XXXX

# Security Keys (Generate secure random keys for production)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# CORS Origins (comma-separated list)
CORS_ORIGINS=https://davspay.com,https://www.davspay.com,http://localhost:3000

# 2Factor API Configuration
# Get your API key from: https://2factor.in/
TWO_FACTOR_API_KEY=your-2factor-api-key-here

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=False
